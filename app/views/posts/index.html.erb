<section id="blog">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<% @posts.each do |post| %>
				  <div class="blog_wrapper">
				    <h3 class="title"><%= link_to post.title, post %></h3>
				    <p class="date text-muted"><%= post.created_at.strftime("%d %B, %Y") %></p>
				  </div>
				<% end %>
			</div>
		</div><!-- .row -->
	</div><!-- .container -->
</section>