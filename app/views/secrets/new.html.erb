<%= render 'header' %>


<section id="secrets">
    <div class="container">  
<% if notice %>
    <div id="notice_wrapper">
        <p class="alert alert-warning"><%= notice %></p>
    </div>
<% elsif alert %>
    <div id="notice_wrapper">
        <p class="alert alert-success"><%= alert %></p>
    </div>
<% end %>
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <%= render 'form' %>
            </div>
        </div>         
        <% @secrets.each do |secret| %>
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="secret">
                        <p class="text-left">
                        <% if user_signed_in? %>
                            “<%= link_to secret.title, secret %>”
                            <div class="fb-like" data-href="<%= link_to "Secret", secrets_url(@secret) %>" data-width="50" data-layout="standard" data-action="like" data-show-faces="false" data-share="false"></div>
                        <% else %>
                            “<%= secret.title %>”
                            <div class="fb-like" data-href="<%= link_to "Secret", secrets_url(@secret) %>" data-width="50" data-layout="standard" data-action="like" data-show-faces="false" data-share="false"></div>
                        <% end %>
                        </p>
                        <div class="row">
                            <div class="col-md-6">
                                <p class="school text-muted text-left">
                                    <% if secret.comments.any? %>
                                        <%= link_to secret.comments.count.to_s + " Σχόλια", secret %>
                                    <% else %>
                                        <%= link_to "Νέο σχόλιο", secret %>
                                    <% end %>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p class="school text-muted text-right">
                                    <%= secret.check_in %>                            
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% end %>
            
            <div class="row">
                <div class="col-lg-12 text-center">

                    <% @secrets = Secret.paginate(:per_page => 7, :page => params[:page] ) %>
                    <%= will_paginate @secrets, renderer: BootstrapPagination::Rails, previous_label: "Newer", next_label: "Older", inner_window: 1, outer_window: 0 %>
                </div>
                                    <div class="fb-page" data-href="https://www.facebook.com/anomologito" data-width="280" data-hide-cover="true" data-show-facepile="true" data-show-posts="false"><div class="fb-xfbml-parse-ignore"><blockquote cite="https://www.facebook.com/anomologito"><a href="https://www.facebook.com/anomologito">Ανομολόγητο App</a></blockquote></div></div>     
            </div>
    </div>    
</section>                                                              
